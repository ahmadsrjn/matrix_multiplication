<div class="container mt-5 pt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Result Matrix</h2>
    <button class="btn btn-danger">
      <%= link_to 'Go Back', root_path, method: :get, class: "text-decoration-none text-white fw-bold" %>
    </button>
  </div>

  <% if @result_matrix %>
    <div class="result-matrix p-3 mb-3" style="background-color: #f8f9fa; border-radius: 8px;">
      <% @result_matrix.each do |row| %>
        <div class="d-flex justify-content-start">
          <% row.each do |value| %>
            <div class="px-3 py-1 border" style="min-width: 50px; text-align: center;">
              <%= value %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No matrix calculated yet.</p>
  <% end %>
</div>

<style>
  .result-matrix div:not(:last-child) {
    margin-bottom: .25rem;
  }
  .result-matrix div div:not(:last-child) {
    border-right: none;
  }
</style>
